# Hello World Kotlin
# Import all standard Kotlin development commands
import '../../../languages/kotlin/justfile'

# Hello-specific tasks

# Run and show output clearly
hello:
    @echo "=== Hello World Kotlin ==="
    @just run

# Verify the output is correct
verify:
    @echo "Verifying hello world output..."
    @just build > /dev/null 2>&1
    @output=$(just run 2>/dev/null) && \
    if echo "$output" | grep -q "Hello"; then \
        echo "✅ Output contains Hello: $output"; \
    else \
        echo "❌ Unexpected output: $output"; \
        exit 1; \
    fi
